{# src/BilletterieBundle/Resources/views/Default/index.html.twig #}

{% extends "BilletterieBundle::layout.html.twig" %}

{% block title %}
  Billeterie - {{ parent() }}
{% endblock %}

{% block body %}
  <div class="row" >
    <div class="col-md-offset-2 col-md-8" id="reservation" >
      <h2>Choix de la date</h2>
      <div class="col-md-offset-2 col-md-4" >
        <div id="datepicker" ></div>
      </div>
      <div class="col-md-4" >
        Nb de tickets
      </div>
    </div>
  </div>
{% endblock %}

{% block javascripts %}  
  <script>
    $(document).ready(function() {
      $('#datepicker').datepicker({
          format: "yyyy-mm-dd",
          weekStart: 1,
          startDate: "today",
          maxViewMode: 0,
          language: "fr",
          daysOfWeekDisabled: "0",
          beforeShowDay: function (date){
                        if (date.getMonth() == (new Date()).getMonth())
                          switch (date.getDate()){
                            case 4:
                              return {
                                tooltip: 'Example tooltip',
                                classes: 'active'
                              };
                            case 8:
                              return false;
                            case 12:
                              return "green";
                        }
                      },
          datesDisabled: ['03/06/2016', '03/21/2016']
        });
      });
          alert('coucou');
    </script>
{% endblock %}